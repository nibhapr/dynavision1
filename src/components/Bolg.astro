---
import type { CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import { formatDate } from "@util/common";

const { blogEntry } = Astro.props;
interface Props {
	blogEntry: CollectionEntry<"blog">;
}
---

<article class="p-6 bg-white rounded-lg border border-gray-200 shadow-card">
	<div class="flex justify-between items-center mb-5 text-gray-500">
		<span
			class="bg-lime text-black text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded"
		>
		</span>
		<span class="text-sm">{formatDate(blogEntry.data.pubDate)}</span>
	</div>
	<h2 class="mb-2 text-2xl font-bold tracking-tight text-gray-900">
		<a href="#">{blogEntry.data.title}</a>
	</h2>
	<p class="mb-5 font-light text-gray-500" style="white-space: pre-line">
		{blogEntry.data.title}
	</p>
	<div class="flex justify-between items-center">
		<div class="flex items-center space-x-4">
			<img
				class="w-7 h-7 rounded-full"
				width={32}
				height={32}
				src={blogEntry.data.avatarSrc}
				alt={blogEntry.data.author + " cover"}
			/>
			<span class="font-medium">{blogEntry.data.author}</span>
		</div>
		<a
			href={`/blogs/${blogEntry.slug}/`}
			class="inline-flex items-center font-medium text-black hover:text-lime"
		>
			Read more
			<svg
				class="ml-2 w-4 h-4"
				fill="currentColor"
				viewBox="0 0 20 20"
				xmlns="http://www.w3.org/2000/svg"
			>
				<path
					fill-rule="evenodd"
					d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
					clip-rule="evenodd"></path>
			</svg>
		</a>
	</div>
</article>
